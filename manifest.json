{
  "manifest_version": 3,
  "name": "Medusa - Ask to AI v1.0",
  "version": "1.0",
  "description": "Medusa - Ask to AI: ChatGPT, DeepSeek, Copilot, Gemini, etc... or ALL AI",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://*.chatgpt.com/*",
    "https://*.claude.ai/*",
    "https://*.anthropic.com/*",
    "https://*.deepseek.com/*",
    "https://*.copilot.microsoft.com/*",
    "https://*.github.com/*",
    "https://*.gemini.google.com/*",
    "https://*.google.com/*",
    "https://*.x.ai/*",
    "https://*.grok.com/*",
    "https://*.meta.ai/*",
    "https://*.facebook.com/*",
    "https://*.mistral.ai/*",
    "https://*.perplexity.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://chat.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://gemini.google.com/*",
        "https://x.ai/*",
        "https://grok.com/*",
        "https://meta.ai/*",
        "https://chat.mistral.ai/*",
        "https://www.perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["motorAI.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
 